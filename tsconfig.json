{
  "compileOnSave": true,
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./built",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "types": ["node"]
  }
}
